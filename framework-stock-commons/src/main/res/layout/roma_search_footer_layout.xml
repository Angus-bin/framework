<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_minheight"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <com.trevorpage.tpsvg.SVGView
        android:id="@+id/svg_search_clear"
        android:layout_width="@dimen/abs__shortcut_svg_size"
        android:layout_height="@dimen/abs__shortcut_svg_size"
        android:visibility="gone"/>

    <View
        android:id="@+id/v_up_txt_footer_devider"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/list_item_minheight"
        android:text="清除搜索记录" />
    <View
        android:id="@+id/v_under_txt_footer_devider"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:visibility="gone"/>
</LinearLayout>