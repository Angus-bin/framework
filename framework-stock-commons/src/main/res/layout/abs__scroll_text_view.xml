<?xml version="1.0" encoding="utf-8"?>
<com.romaway.framework.RomaMaxHeightView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:maxHeightDimen="@dimen/abs__dialog_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ScrollView
            android:id="@+id/sv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <TextView
                android:id="@+id/message_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:paddingTop="15dp"
                android:textColor="#666666"
                android:textSize="@dimen/roma_dialog_only_content_font_size" />
        </ScrollView>

        <ImageView
            android:id="@+id/iv_gradient_bar_image"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/sv_msg"
            android:paddingRight="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/yt_dialog_gradient_bar" />
    </RelativeLayout>
</com.romaway.framework.RomaMaxHeightView>