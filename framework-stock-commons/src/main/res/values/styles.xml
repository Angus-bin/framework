<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Sherlock.Light.JinGuXinActionBar" parent="Theme.Sherlock.Light.DarkActionBar">
       <item name="ROMAactionBarItemBackground">@null</item>
       <item name="ROMAactionBarStyle">@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse.JinGuXin</item>
    </style>
    <style name="NotificationContent">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:maxHeight">30dip</item>
		<item name="android:minHeight">5dip</item>
		<item name="android:indeterminateOnly">false</item>
		<item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
		<item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
	</style>

    <style name="translucent" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Theme.Translucent.NoTitleBar.Fullscreen</item>
    </style>

    <style name="translucent2" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@color/translucent_background2</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Theme.Translucent.NoTitleBar.Fullscreen</item>
    </style>

    <style name="translucent3" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@color/translucent_background3</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Theme.Translucent.NoTitleBar.Fullscreen</item>
    </style>

    <!-- ROMA Button 风格 -->
    <style name="ButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyleShap" parent="ButtonStyle">
        <item name="android:background">@drawable/abs__btn_shap_red</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <!-- EditView输入框自定义样式: 光标, 字体, hint字体 -->
    <style name="RomaCommonsEditViewStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">28px</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Universal.Widget.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/uvv_progress_rotate</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <style name="ROMAButtonStyleShapWhile" parent="ROMAButtonStyle">
        <item name="android:background">@drawable/linear_layout_boder_dialog</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

