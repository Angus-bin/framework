<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical" 
     android:layout_width="fill_parent" 
     android:layout_height="wrap_content"
     android:background="#ffffffff" 
     >
     <LinearLayout 
        android:orientation="horizontal" 
     	android:layout_width="fill_parent" 
     	android:layout_height="wrap_content" 
         >
    
	     <ImageView
	          android:id="@+id/left_icon" 
	          android:layout_width="wrap_content" 
	          android:layout_height="wrap_content" 
	          android:layout_gravity="center_vertical"
	          android:layout_marginLeft="23.0dip"
	          android:src="@drawable/bgnull"
	         />
	     
	     <LinearLayout 
	         android:orientation="vertical" 
		     android:layout_width="fill_parent" 
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="23.0dip"
	         >
		     <FrameLayout
		          android:layout_width="fill_parent" 
		     	  android:layout_height="wrap_content"
		     	  android:minHeight="@dimen/setting_item_minheight"
		          >
		          <LinearLayout 
		              android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		              android:orientation="horizontal"
		              android:layout_gravity="center_vertical">
		              <include 
			          layout="@layout/abs__item_text_layout"
			          android:layout_width="wrap_content" 
			          android:layout_height="wrap_content"
				      
			          />
			      	<ImageView 
			      	    android:id="@+id/iv_pot"
			          	android:layout_width="wrap_content"
			          	android:layout_height="wrap_content"
			          	android:background="@drawable/shape_red_dot"
			          	android:layout_marginLeft="5dip"/>
		          </LinearLayout>
			      
			      <TextView 
			         android:id="@+id/right_textView" 
			         android:layout_width="wrap_content" 
			         android:layout_height="wrap_content"
			         android:drawableRight="@drawable/abs__roma_icon_arrow_right"
			         android:textColor="#ff989898"
			         android:textSize="@dimen/abs__item_text_summary_size1"
			         android:layout_alignParentRight="true"
			         android:gravity="center"
			         android:layout_centerVertical="true"
			         android:layout_gravity="right|center"
			         android:layout_marginRight="20dip"
			        />
			 </FrameLayout>
			 <View 
		        android:id="@+id/divider_title"
		        android:layout_width="fill_parent" 
		        android:layout_height="@dimen/abs__divider_size"
		        android:layout_marginTop="5dp"
		        android:background="@color/abs__divider_color"
		      />
		 </LinearLayout>
	</LinearLayout>
    <View 
        android:id="@+id/divider_bottom"
        android:layout_width="fill_parent" 
        android:layout_height="@dimen/abs__divider_size"
        android:layout_marginTop="5dp"
        android:background="@color/abs__divider_color"
       />
</LinearLayout>