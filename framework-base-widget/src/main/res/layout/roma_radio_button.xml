<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
     android:id="@+id/ll_parent">

    <RelativeLayout
        android:id="@+id/rl_radio_parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="@dimen/setting_item_minheight"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <RadioButton
            android:button="@drawable/roma_radiobutton_bg"
            android:id="@+id/radio_icon_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/txt_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/radio_icon_view"
            android:textColor="@color/abs__font_color00"
            android:textSize="@dimen/abs__item_text_summary_size1" />

        <TextView
            android:id="@+id/txt_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/abs__font_color00"
            android:textSize="@dimen/abs__item_text_summary_size1" />
    </RelativeLayout>

    <View
        android:id="@+id/v_ser_sel_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abs__divider_size"
        android:layout_marginTop="5dp"
        android:background="@color/abs__divider_color" />

</LinearLayout>