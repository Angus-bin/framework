<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abs__bottom_action_bar_default_height"
        android:gravity="center"
        android:orientation="vertical">

        <!--<com.trevorpage.tpsvg.SVGView
            android:id="@+id/siv_topicon"
            android:layout_width="39px"
            android:layout_height="39px"
            app:layout_auto_basewidth="height" />-->
        <ImageView
            android:id="@+id/img_topicon"
            android:layout_width="39px"
            android:layout_height="39px"
            app:layout_auto_basewidth="height"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:textColor="#ffffffff"
            app:layout_auto_basewidth="height|textSize|marginTop"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_flag"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@id/ll_parent"
        android:layout_marginTop="2dp"
        android:background="@drawable/roma_tg_red_point_shape"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_flag_for_tuisong"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@id/ll_parent"
        android:layout_marginTop="2dp"
        android:background="@drawable/roma_tg_red_point_shape"
        android:gravity="center"
        android:visibility="gone" />
</com.zhy.autolayout.AutoRelativeLayout>
